#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if [ -f .skip-husky ]; then
    echo "â­ï¸ Skipping pre-commit checks (local skip file found)."
    exit 0
fi

echo "ğŸ” Running linter..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the errors before committing."
  exit 1
fi

echo "ğŸ” Running TypeScript type checking..."
npm run lint:ts
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix the type errors before committing."
  exit 1
fi

echo "ğŸ§ª Running tests..."
cd client && CI=true npm test -- --watchAll=false --passWithNoTests --silent
TEST_RESULT=$?
cd ..

if [ $TEST_RESULT -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before committing."
  exit 1
fi

echo "âœ… All checks passed!"
